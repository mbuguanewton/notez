{
  "manifest_version": 3,
  "name": "Notez - Block-based Notes",
  "version": "1.0.0",
  "description": "A Notion-like block-based note-taking extension with rich editing capabilities",
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus",
    "scripting",
    "sidePanel"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Notez - Quick Notes",
    "default_icon": {
      "16": "icons/emoji-icon-16.svg",
      "32": "icons/emoji-icon-32.svg",
      "48": "icons/emoji-icon-48.svg",
      "128": "icons/emoji-icon-128.svg"
    }
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "icons": {
    "16": "icons/emoji-icon-16.svg",
    "32": "icons/emoji-icon-32.svg",
    "48": "icons/emoji-icon-48.svg",
    "128": "icons/emoji-icon-128.svg"
  },
  "commands": {
    "open-quick-note": {
      "suggested_key": {
        "default": "Alt+Shift+N",
        "mac": "MacCtrl+Shift+N"
      },
      "description": "Open quick note modal"
    },
    "toggle-sidepanel": {
      "suggested_key": {
        "default": "Alt+Shift+S",
        "mac": "MacCtrl+Shift+S"
      },
      "description": "Toggle notes sidepanel"
    },
    "capture-selection": {
      "suggested_key": {
        "default": "Alt+Shift+Q",
        "mac": "MacCtrl+Shift+Q"
      },
      "description": "Capture selected text as note"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*", "*.js", "*.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
